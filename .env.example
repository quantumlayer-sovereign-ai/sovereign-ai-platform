# Sovereign AI Configuration Example
# Copy this to .env and fill in your values

# Development Mode (enables dev token generation)
DEV_MODE=true

# Model Configuration
MODEL_SIZE=14b  # Options: 1.5b, 3b, 7b, 14b, 32b
QUANTIZE=true

# Azure OpenAI Configuration (optional - for hybrid mode)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4.1  # Options: gpt-4, gpt-4.1, gpt-5, o4-mini

# Claude API Configuration (optional - for triple hybrid mode)
ANTHROPIC_API_KEY=sk-ant-api03-...
CLAUDE_MODEL=claude-3.5-sonnet  # Options: claude-3-opus, claude-3-sonnet, claude-3.5-sonnet

# Dual Hybrid Model Settings (local + Azure)
USE_HYBRID_MODEL=true  # Use local for simple, Azure for complex
COMPLEXITY_THRESHOLD=500  # Task length threshold for Azure

# Triple Hybrid Model Settings (local + Azure + Claude)
USE_TRIPLE_HYBRID=false  # Enable 3-tier semantic routing
ROUTING_MODE=semantic  # Options: semantic, keyword, manual

# Routing Thresholds (for semantic routing)
LOCAL_ROUTING_THRESHOLD=0.75  # Similarity threshold for local model
AZURE_ROUTING_THRESHOLD=0.70  # Similarity threshold for Azure
CLAUDE_ROUTING_THRESHOLD=0.70  # Similarity threshold for Claude

# RAG Configuration
RAG_PERSIST_DIR=./data/vectordb

# Rate Limiting
MAX_CONCURRENT_REQUESTS=10
